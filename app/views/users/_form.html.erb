<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> No pudimos guardar tu correo:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-inline">
    <div class="form-group">
      <div class="field">
        <%= f.text_field :email, class: "form-control", id:"exampleInputName2" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Enviar', class: "btn btn-default btnSend"%>
    </div>
  </div>  
<% end %>
